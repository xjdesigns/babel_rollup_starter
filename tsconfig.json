{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "outDir": "lib",
      "strict": true,
      "noImplicitAny": false,
      "removeComments": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
